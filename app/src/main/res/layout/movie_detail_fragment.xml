<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.example.moviesapp.data.model.Movie" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical"
            tools:context=".ui.detail.NewsDetailFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:setImageUrl="@{model.backdrop_path}"
                    tools:src="@color/cardview_dark_background" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginEnd="@dimen/size_16"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{model.title}"
                        android:textColor="@color/secondary_text"
                        android:textSize="@dimen/font_size_29"
                        tools:targetApi="o"
                        tools:text="Deadpool " />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_16"
                        android:layout_marginBottom="@dimen/size_16"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextAppearance.AppCompat.Caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/size_12"
                            android:text="@{@string/generic_rating(model.vote_average)}"
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/font_size_20"
                            tools:text="10/10" />

                        <TextView
                            style="@style/TextAppearance.AppCompat.Caption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{model.release_date}"
                            android:textColor="@color/caption_text"
                            android:textSize="@dimen/font_size_20"
                            tools:text="2019-02-19" />
                    </LinearLayout>
                    <TextView
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/overview"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_16"/>

                    <TextView
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{model.overview}"
                        android:textColor="@color/caption_text"
                        android:textSize="@dimen/font_size_14"
                        tools:text="La nostra recensione completa di POCO X3 Pro, smartphone da 200 Euro con un processore di fascia alta." />
                </LinearLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:elevation="16dp"
                android:id="@+id/bacButton"
                android:layout_width="@dimen/size_42"
                android:layout_height="@dimen/size_42"
                android:layout_margin="@dimen/size_16"
                android:src="@drawable/ic_back_button" />
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

</layout>